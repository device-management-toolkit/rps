{
    "compilerOptions": {
        "outDir": "./dist",
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "allowJs": true,
        "target": "ES2022",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "type": [
        "@types/node"
    ]
}